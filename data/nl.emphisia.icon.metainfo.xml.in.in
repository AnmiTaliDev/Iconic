<?xml version='1.0' encoding='utf-8'?>
<component type="desktop-application">
  <!--Created with jdAppStreamEdit 9.1-->
  <id>@app-id@</id>
  <name>Iconic</name>
  <summary>Easily add icons on top of folders</summary>
  <developer id="@youpie@social.emphisia.nl">
    <name>Youpie</name>
  </developer>
  <metadata_license>CC-BY-4.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <update_contact>youpie@emphisia.nl</update_contact>
  <description>
    <p>This program allows an easy and intuitive way to add an icon on top of a folder to help you differentiate it better.</p>
    <p>This program is written in Rust and Libadwaita and is my first attempt at creating an application</p>
  </description>
  <screenshots>
    <screenshot type="default">
      <caption>Main menu in light mode</caption>
      <image type="source">https://github.com/youpie/Iconic/blob/main/data/screenshots/Main%20screen%20light.png?raw=true</image>
    </screenshot>
    <screenshot>
      <caption>Main menu in dark mode</caption>
      <image type="source">https://github.com/youpie/Iconic/blob/main/data/screenshots/Main%20screen%20dark.png?raw=true</image>
    </screenshot>
  </screenshots>
  <releases>
    <release version="2024.8.1" date="2024-08-18" type="stable">
      <description>
        <p>A new update to Iconic is here! It does not add many features but features a lot of improvements under the hood, this means the app will now crash way less often without any warning. Some changes include:</p>
        <ul>
          <li>Added error handling on opening files</li>
          <li>Added error handling on saving files</li>
          <li>Added donation link</li>
          <li>Added pop-up when dragging in files</li>
          <li>Updated Dutch translations</li>
          <li>Updated it and hi translations (with google translate)</li>
        </ul>
        <p>Please report any bugs you see! Many thanks</p>
      </description>
    </release>
    <release version="2024.2.0" date="2024-08-11" type="stable">
      <description>
        <p>This is a new major release of Iconic. Featuring many bug fixes and added features. Some notable ones are:</p>
        <ol>
          <li>Drag and drop support</li>
          <li>Copy-paste support</li>
          <li>Better file type detection</li>
          <li>Updated dutch translations</li>
          <li>Added Hindi translations</li>
          <li>Fixed spelling mistakes</li>
          <li>Fixed issues with black pixels not converting to monochrome</li>
        </ol>
      </description>
    </release>
    <release version="1.1.1" date="2024-07-23" type="stable">
      <description>
        <p>Another small update with a few additions and changes</p>
        <ol>
          <li>You can now open containing folder after saving image</li>
          <li>Added italian translation</li>
          <li>Updated Dutch translation</li>
        </ol>
      </description>
    </release>
    <release version="1.1.0" date="2024-07-20" type="stable">
      <description>
        <p>This version adds a few small features and fixes some bugs</p>
        <ul>
          <li>The app now shows some errors as pop-ups</li>
          <li>You can now temporarily open a new folder image</li>
          <li>It now first shows a pop-up when the folder image is not found</li>
        </ul>
      </description>
    </release>
    <release version="1" date="2024-07-17" type="stable">
      <description>
        <p>Initial release</p>
      </description>
    </release>
    <release version="0.1" date="2024-07-06" type="development"/>
  </releases>
  <url type="homepage">https://emphisia.nl</url>
  <url type="bugtracker">https://github.com/youpie/Iconic/issues</url>
  <url type="donation">https://ko-fi.com/youpie</url>
  <url type="translate">https://github.com/youpie/Iconic/tree/main/po</url>
  <url type="vcs-browser">https://github.com/youpie/Iconic</url>
  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
    <internet>offline-only</internet>
  </supports>
  <content_rating type="oars-1.1"/>
  <launchable type="desktop-id">@app-id@.desktop</launchable>
  <keywords>
    <keyword>icon</keyword>
    <keyword>create</keyword>
    <keyword>folder icon</keyword>
    <keyword>svg</keyword>
    <keyword>png</keyword>
    <keyword>gnome</keyword>
    <keyword>icon create</keyword>
    <keyword>icon creator</keyword>
    <keyword>folder icon creator</keyword>
    <keyword>Iconic</keyword>
  </keywords>
  <translation type="gettext">@gettext-package@</translation>
  <branding>
    <color type="primary" scheme_preference="light">#99c1f1</color>
    <color type="primary" scheme_preference="dark">#b5835a</color>
  </branding>
</component>
